#ifndef OSGEARTH_BUILDINGS_ELEVATION_H
#define OSGEARTH_BUILDINGS_ELEVATION_H

#include "Common"
#include <vector>

namespace osgEarth { namespace Buildings
{
    /**
     * A vertical section of a building.
     */
    class Elevation
    {
    public:
        /** Constructor */
        Elevation() : _stories(1u) { }

        /**
         * Height of the elevation in stories
         */
        void setNumStories(unsigned value) { _stories = value; }
        unsigned getNumStories() const { return _stories; }

    protected:
        unsigned _stories;
    };

    typedef std::vector<Elevation> ElevationVector;

} }

#endif // OSGEARTH_BUILDINGS_ELEVATION_H
